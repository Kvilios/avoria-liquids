                    <div class="wheel">
                        <div class="rotate">
                            <img class="wheel-img" src="images/wheel.png" />
                            <img class="light light_0-img" src="images/lights/0.png" />
                            <img class="light light_1-img" src="images/lights/1.png" />
                            <img class="light light_2-img" src="images/lights/2.png" />
                            <img class="light light_3-img" src="images/lights/3.png" />
                            <img class="light light_4-img" src="images/lights/4.png" />
